    .product-item {
      transition: transform 0.3s ease-in-out;
      border-radius: 10px;
      overflow: hidden;
    }

    .product-thumb img {
      transition: transform 0.3s ease-in-out;
      border-radius: 10px;
    }

    .product-thumb:hover img {
      transform: scale(1.05);
    }

    .product-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.3);
      transition: background-color 0.3s ease-in-out;
      opacity: 0;
    }

    .product-thumb:hover .product-overlay {
      opacity: 1;
    }

    .product-content {
      padding: 15px;
    }

    .product-title {
      font-size: 16px;
      margin-bottom: 5px;
      text-decoration: none;
      /* Remove underline */
      color: #343a40;
      /* Set text color */
    }

    .product-price,
    .product-discount-price {
      font-size: 14px;
      margin-bottom: 5px;
      text-decoration: none;
      /* Remove underline */
      color: #6c757d;
      /* Set text color */
    }

    .product-category h2 {
      color: #343a40;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
