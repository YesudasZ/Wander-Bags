    <script>


// Remove product offer
const removeProductOffer = async (productId) => {
  try {
    const result = await Swal.fire({
      title: 'Are you sure?',
      text: 'Do you want to remove the offer for this product?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, remove it!'
    });

    if (result.isConfirmed) {
      const response = await fetch(`/admin/offers/${productId}`, {
        method: 'DELETE',
      });
      const data = await response.json();
      if (response.ok) {
        Swal.fire('Success', data.message, 'success').then(() => {
          location.reload();
      });
    
        fetchProductOffers();
      } else {
        Swal.fire('Error', data.message, 'error');
      }
    }
  } catch (error) {
    console.error(error);
  }
};

// Handle remove offer button click
const handleRemoveOfferClick = (event) => {
  event.preventDefault();
  const productId = event.target.dataset.productId;
  removeProductOffer(productId);
};

// Initialize
document.querySelectorAll('.remove-offer').forEach((button) => {
  button.addEventListener('click', handleRemoveOfferClick);
});



document.addEventListener('DOMContentLoaded', function() {
    const editCategoryOfferBtns = document.querySelectorAll('.edit-category-offer-btn');
    editCategoryOfferBtns.forEach(function(btn) {
      btn.addEventListener('click', function() {
        const categoryId = this.getAttribute('data-category-id');
        const categoryName = this.getAttribute('data-category-name');
        const startDate = this.getAttribute('data-start-date');
        const endDate = this.getAttribute('data-end-date');
        const discount = this.getAttribute('data-discount');

        document.getElementById('editCategoryId').value = categoryId;
        document.getElementById('editCategoryName').value = categoryName;
        document.getElementById('editStartDate').value = new Date(startDate).toISOString().split('T')[0];
        document.getElementById('editEndDate').value = new Date(endDate).toISOString().split('T')[0];
        document.getElementById('editDiscount').value = discount;

        $('#editCategoryOfferModal').modal('show');
      });
    });

    document.getElementById('saveEditChangesBtn').addEventListener('click', function() {
      const categoryId = document.getElementById('editCategoryId').value;
      const startDate = document.getElementById('editStartDate').value;
      const endDate = document.getElementById('editEndDate').value;
      const discount = document.getElementById('editDiscount').value;

      if (startDate >= endDate) {
      Swal.fire({
        icon: 'info',
        title: 'End date must be greater than start date',
        showConfirmButton: false,
        timer: 1500
      });
      return;
    }

    if (isNaN(discount) || discount < 0.1 || discount > 100 || discount % 1 !== 0) {
      Swal.fire({
        icon: 'error',
        title: 'Invalid discount percentage',
        text: 'Discount percentage should be a number between 0.1 and 100 with one decimal place',
        showConfirmButton: true
      });
      return;
    }


      fetch(`/admin/categories/offers/${categoryId}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ startDate, endDate, discount })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          Swal.fire({
            icon: 'success',
            title: 'Category Offer Updated Successfully',
            showConfirmButton: false,
            timer: 1500
          });
          $('#editCategoryOfferModal').modal('hide');
          location.reload();
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error Updating Category Offer',
            text: data.message,
            showConfirmButton: true
          });
        }
      })
      .catch(error => {
        Swal.fire({
          icon: 'error',
          title: 'Error Updating Category Offer',
          text: error.message,
          showConfirmButton: true
        });
      });
    });

    const deleteCategoryOfferBtns = document.querySelectorAll('.delete-category-offer-btn');
    deleteCategoryOfferBtns.forEach(function(btn) {
      btn.addEventListener('click', function() {
        const categoryId = this.getAttribute('data-category-id');

        Swal.fire({
          title: 'Are you sure?',
          text: 'You will not be able to recover this category offer!',
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
          if (result.isConfirmed) {
            fetch(`/admin/categories/offers/${categoryId}`, {
              method: 'DELETE',
              headers: {
                'Content-Type': 'application/json'
              }
            })
            .then(response => response.json())
            .then(data => {
              if (data.success) {
                Swal.fire({
                  icon: 'success',
                  title: 'Category Offer Deleted Successfully',
                  showConfirmButton: false,
                  timer: 1500
                });
                location.reload();
              } else {
                Swal.fire({
                  icon: 'error',
                  title: 'Error Deleting Category Offer',
                  text: data.message,
                  showConfirmButton: true
                });
              }
            })
            .catch(error => {
              Swal.fire({
                icon: 'error',
                title: 'Error Deleting Category Offer',
                text: error.message,
                showConfirmButton: true
              });
            });
          }
        });
      });
    });
  });








const handleFormSubmission = (event) => {
  event.preventDefault();
  const startDate = new Date(event.target.startDate.value);
  const endDate = new Date(event.target.endDate.value);

  
  if (endDate < startDate) {
    Swal.fire({
      icon: 'error',
      title: 'Oops...',
      text: 'End date must be greater than start date.',
    });
    return;
  }
  const data = {
    startDate: event.target.startDate.value,
    endDate: event.target.endDate.value,
    category: event.target.category.value,
    discountPercentage: event.target.discountPercentage.value,
  };
  createCategoryOffer(data);
};



