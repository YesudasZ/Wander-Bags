    <script>

// Handle form submission
const handleFormSubmission = (event) => {
  event.preventDefault();
  const data = {
    startDate: event.target.startDate.value,
    endDate: event.target.endDate.value,
    category: event.target.category.value,
    discountPercentage: event.target.discountPercentage.value,
  };
  createCategoryOffer(data);
};



      // Fetch category offers
      const fetchCategoryOffers = async () => {
  try {
    const response = await fetch('/admin/offers');
    const data = await response.json();
    renderCategoryOffers(data);
  } catch (error) {
    console.error(error);
  }
};

// Initialize
document.getElementById('createCategoryOfferForm').addEventListener('submit', handleFormSubmission);
fetchCategoryOffers();







// Render category offers
// Render category offers
const renderCategoryOffers = (offers) => {
  const tableBody = document.getElementById('categoryOffersTable').querySelector('tbody');
  tableBody.innerHTML = '';
  offers.forEach((offer) => {
    if (offer.offer > 0) {
      const row = document.createElement('tr');
      row.innerHTML = `
        <td>${offer.name}</td>
        <td>${offer.offerStart}</td>
        <td>${offer.offerEnd}</td>
        0</td>
        <td>${offer.countOfProducts}</td>
      `;
      tableBody.appendChild(row);
    }
  });
};

// Create category offer
// Create category offer
const createCategoryOffer = async (data) => {
  try {
    const response = await fetch('/admin/offers', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(data),
    });
    const result = await response.json();
    if (response.ok) {
      Swal.fire('Success', result.message, 'success').then(() => {
        document.getElementById('createCategoryOfferModal').modal('hide');
      });
      fetchCategoryOffers();
    } else {
      Swal.fire('Error', result.message, 'error');
    }
  } catch (error) {
    console.error(error);
  }
};



// Apply discount
const applyDiscount = async (productId, discountPercentage) => {
  try {
    const response = await fetch('/admin/productOffers', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ productId, discountPercentage }),
    });
    const result = await response.json();
    if (response.ok) {
      Swal.fire('Success', result.message, 'success');
      fetchProductOffers();
    } else {
      Swal.fire('Error', result.message, 'error');
    }
  } catch (error) {
    console.error(error);
  }
};









// Handle apply discount button click
const handleApplyDiscountClick = (event) => {
  event.preventDefault();
  const productId = event.target.dataset.productId;
  const discountPercentage = document.getElementById('discountPercentagee').value;
  applyDiscount(productId, discountPercentage);
  console.log("test",discountPercentage);
};

// Initialize
document.querySelectorAll('.apply-discount').forEach((button) => {
  button.addEventListener('click', handleApplyDiscountClick);
});
fetchProductOffers();


// Fetch product offers
const fetchProductOffers = async () => {
  try {
    const response = await fetch('/admin/offers');
    const data = await response.json();
    renderProductOffers(data);
  } catch (error) {
    console.error(error);
  }
};

// Render product offers
const renderProductOffers = (products) => {
  const tableBody = document.getElementById('productOffersTable').querySelector('tbody');
  tableBody.innerHTML = '';
  products.forEach((product) => {
    const row = document.createElement('tr');
    row.innerHTML = `
      <td>${product.name}</td>
      <td><img src="/productimages/${product.images[0]}" alt="${product.name}" style="width: 100px; height: 100px;"></td>
      <td>${product.price}</td>
      <td>${product.discountPrice}</td>
      <td style="max-width: 20px"> <input type="number" class="form-control" id="discountPercentage" min="1" max="100" required></td>
      <td>
        <button type="button" class="btn btn-primary apply-discount" data-product-id="${product._id}">
          Apply
        </button>
      </td>
    `;
    tableBody.appendChild(row);
  });
};

// Initialize
fetchProductOffers();


    </script>


