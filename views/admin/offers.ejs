    referredUserRewardError.style.color = 'red';
    document.getElementById('referredUserReward').style.border = "solid 2px red";
    applyOfferBtn.disabled = true;
    return false;
  }

  if (!referredUserRewardRegex.test(referredUserRewardValue)) {
    referredUserRewardError.textContent = 'Referred User Reward should be a positive number';
    referredUserRewardError.style.color = 'red';
    document.getElementById('referredUserReward').style.border = "solid 2px red";
    applyOfferBtn.disabled = true;
    return false;
  }

