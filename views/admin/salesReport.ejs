                          <th>Customer</th>
                          <th>Product</th>
                          <th>Quantity Sold</th>
                          <th>Price</th>
                          <th>Coupon Discount</th>
                          <th>Total Sales</th>
                      </tr>
                  </thead>
                  <tbody class="tbody">
                      <% let overallOrderCount = 0; %>
                      <% let overallOrderAmount = 0; %>
                      <% let overallDiscountAmount = 0; %>
                      <% orders.forEach(order => { %>
                      <tr>
                          <td><%= new Date(order.orderDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>
                          <td><%= order._id %></td>
                          <td><%= order.user.name %></td>
                          <td>
                              <% order.items.forEach(item => { %>
                              <% if (item.productId) { %>
                              <div>
                                  <%= item.title %>
                              </div>
                              <% } else { %>
                              <div>No product found</div>
                              <% } %>
                              <% }) %>
                          </td>
                          <td>
                              <% let orderQuantity = 0; %>
                              <% order.items.forEach(item => { %>
                              <% if (item.productId) { %>
                              <% orderQuantity += item.quantity; %>
                              x <%= item.quantity %><br>
                              <% } %>
                              <% }) %>
                              <% overallOrderCount += orderQuantity; %>
                          </td>
                          <td>
                              <% let orderPrice = 0; %>
                              <% order.items.forEach(item => { %>
                              <% if (item.productId) { %>
                              <% orderPrice += item.productPrice * item.quantity; %>
                              <%= (item.productPrice * item.quantity).toFixed(2) %> <br>
                              <% } %>
                              <% }) %>
                              <% overallOrderAmount += orderPrice; %>
                          </td>
                          <td>
                              <% let orderDiscount = 0; %>
                              <% order.items.forEach(item => { %>
                              <% if (item.productId) { %>
                              <% orderDiscount += ((item.productPrice * item.quantity) - order.billTotal); %>
                              <%= ((item.productPrice * item.quantity) - order.billTotal).toFixed(2) %> <br>
                              <% } %>
                              <% }) %>
                              <% overallDiscountAmount += orderDiscount; %>
                          </td>
                          <td><%= order.billTotal.toFixed(2) %></td>
                      </tr>
                      <% }) %>
                      <tr>
                          <td colspan="4"><strong> Sales Count:</strong> <%= overallOrderCount %></td>
                          <td colspan="2"><strong>Total Discount:</strong> <%= overallDiscountAmount.toFixed(2) %></td>
                          <td colspan="2"><strong>Total Sales Amount:</strong> <%= overallOrderAmount.toFixed(2)-overallDiscountAmount.toFixed(2) %></td>
                        
                      </tr>
                  </tbody>
