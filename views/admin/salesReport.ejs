// customDateInput.addEventListener('change', applyFilter);
dayButton.addEventListener('click', applyFilter);
weekButton.addEventListener('click', applyFilter);
monthButton.addEventListener('click', applyFilter);
yearButton.addEventListener('click', applyFilter);


const startDateInput = document.getElementById('startDate');
const endDateInput = document.getElementById('endDate');
const customDateRangeButton = document.getElementById('customDateRange');

customDateRangeButton.addEventListener('click', applyFilter);

function applyFilter(event) {
  let filter = '';
  let startDate = startDateInput.value;
  let endDate = endDateInput.value;

  if (event.target.id === 'customDateRange') {
    filter = 'customDateRange';
  } else {
    filter = event.target.id;
  }

  fetch(`/admin/salesReport?filter=${filter}&startDate=${startDate}&endDate=${endDate}`)
    .then(response => response.text())
    .then(html => {
      const parser = new DOMParser();
      const doc = parser.parseFromString(html, 'text/html');
      const tableHtml = doc.querySelector('.table-responsive').innerHTML;

      const tableContainer = document.querySelector('.table-responsive');
      tableContainer.innerHTML = tableHtml;
    })
    .catch(error => console.error(error));
}




const downloadPDFBtn = document.getElementById('downloadPDF');
const downloadExcelBtn = document.getElementById('downloadExcel');
const tableElement = document.querySelector('.table');

downloadPDFBtn.addEventListener('click', exportToPDF);


function exportToPDF(){
    if (typeof jsPDF !== 'undefined') {
        const content = document.querySelector('.table-responsive');
        html2canvas(content).then(canvas => {
            const imgData = canvas.toDataURL('image/png');
            const pdf = new jsPDF();
            const imgWidth = 200;
            const imgHeight = (canvas.height * imgWidth) / canvas.width;

            //Add heading
            const text = 'Sales Report';
            const fontSize = 20;
            const textWidth = pdf.getStringUnitWidth(text) * fontSize / pdf.internal.scaleFactor;
            const textX = (pdf.internal.pageSize.getWidth() - textWidth) / 2;
            pdf.setFontSize(fontSize);
            pdf.setFontStyle('bold');
            pdf.text(text, textX, 20);

            pdf.addImage(imgData, 'PNG', 5, 30, imgWidth, imgHeight);

            // Add footer
            const footerText = '********TEAM WANDER********';
            const footerFontSize = 8;
            const footerTextWidth = pdf.getStringUnitWidth(footerText) * footerFontSize / pdf.internal.scaleFactor;
            const footerTextX = (pdf.internal.pageSize.getWidth() - footerTextWidth) / 2;
            const tableBottomY = 40 + imgHeight;
            const footerTextY = tableBottomY + 10;
            pdf.setFontSize(footerFontSize);
            pdf.text(footerText, footerTextX, footerTextY);

            
            pdf.save('sales_report.pdf');
        })
    } else {
        console.error('jsPDF library is not available');
    }
    }

    downloadExcelBtn.addEventListener('click', downloadExcel);

function downloadExcel() {
  const workbook = XLSX.utils.table_to_book(tableElement);
  XLSX.writeFile(workbook, 'sales_report.xlsx');
}
const currentDate = new Date().toISOString().split('T')[0];
document.getElementById('startDate').max = currentDate;
document.getElementById('endDate').max = currentDate;
