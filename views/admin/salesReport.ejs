// Get references to the filter buttons
const customDateInput = document.getElementById('customDate');
const dayButton = document.getElementById('day');
const weekButton = document.getElementById('week');
const monthButton = document.getElementById('month');

// Add event listeners to the filter buttons
customDateInput.addEventListener('change', applyFilter);
dayButton.addEventListener('click', applyFilter);
weekButton.addEventListener('click', applyFilter);
monthButton.addEventListener('click', applyFilter);

// Function to apply the filter
function applyFilter(event) {
  let filter = '';
  let date = '';

  if (event.target.id === 'customDate') {
    filter = 'customDate';
    date = event.target.value;
  } else {
    filter = event.target.id;
  }

  // Make a fetch request to the server with the selected filter
  fetch(`/admin/salesReport?filter=${filter}&date=${date}`)
    .then(response => response.text())
    .then(html => {
      // Update the table with the new HTML content
      const tableContainer = document.querySelector('.table-responsive');
      tableContainer.innerHTML = html;
    
    })
    .catch(error => console.error(error));
}


