    <script>
        document.getElementById("editProductForm").addEventListener("submit", async function (event) {
            event.preventDefault(); // Prevent form submission
    
            const isValid = nameValidation() &&
                descriptionValidation() &&
                imageValidation() &&
                priceValidation() &&
                categoryValidation() &&
                statusValidation() &&
                countInStockValidation();
    
            if (isValid) {
                // Form is valid, submit the form
                this.submit();
            }
        });
    
        function nameValidation() {
            const nameValue = document.getElementById("name").value.trim();
            const nameError = document.getElementById("nameError");
    
            if (nameValue === '') {
                nameError.textContent = 'Name is required';
                nameError.style.color = 'red';
                document.getElementById("name").style.border = "solid 2px red";
                return false;
            }
    
            nameError.textContent = '';
            document.getElementById("name").style.border = "solid 2px green";
            return true;
        }
    
        function descriptionValidation() {
            const descriptionValue = document.getElementById("description").value.trim();
            const descriptionError = document.getElementById("descriptionError");
    
            if (descriptionValue === '') {
                descriptionError.textContent = 'Description is required';
                descriptionError.style.color = 'red';
                document.getElementById("description").style.border = "solid 2px red";
                return false;
            }
    
            descriptionError.textContent = '';
            document.getElementById("description").style.border = "solid 2px green";
            return true;
        }
    
        function imageValidation() {
            const imageValue = document.getElementById("newImages").value.trim();
            const imageError = document.getElementById("imageError");
    
            if (imageValue === '') {
                imageError.textContent = '';
                document.getElementById("newImages").style.border = "solid 2px green";
                return true; // Allow no new images
            }
    
            const imageFiles = document.getElementById("newImages").files;
            const allowedTypes = ['image/jpeg', 'image/png', 'image/webp'];
    
            for (const imageFile of imageFiles) {
                const imageType = imageFile.type;
                if (!allowedTypes.includes(imageType)) {
                    imageError.textContent = 'Invalid image type. Allowed types are jpg, jpeg, png, and webp';
                    imageError.style.color = 'red';
                    document.getElementById("newImages").style.border = "solid 2px red";
                    return false;
                }
            }
    
            imageError.textContent = '';
            document.getElementById("newImages").style.border = "solid 2px green";
            return true;
        }
    
        function priceValidation() {
            const priceValue = document.getElementById("price").value.trim();
            const priceError = document.getElementById("priceError");
    
            if (priceValue === '') {
                priceError.textContent = 'Price is required';
                priceError.style.color = 'red';
                document.getElementById("price").style.border = "solid 2px red";
                return false;
            }
    
            if (isNaN(priceValue)) {
                priceError.textContent = 'Price must be a number';
                priceError.style.color = 'red';
                document.getElementById("price").style.border = "solid 2px red";
                return false;
            }
    
    
            if (priceValue < 1) {
               priceError.textContent = 'Price must be greater than or equal to 1';
               priceError.style.color = 'red';
               document.getElementById("price").style.border = "solid 2px red";
               return false;
               }
    
                priceError.textContent = '';
                document.getElementById("price").style.border = "solid 2px green";
                return true;
                }
    
    function categoryValidation() {
        const categoryValue = document.getElementById("category").value.trim();
        const categoryError = document.getElementById("categoryError");
    
        if (categoryValue === '') {
            categoryError.textContent = 'Category is required';
            categoryError.style.color = 'red';
            document.getElementById("category").style.border = "solid 2px red";
            return false;
        }
    
        categoryError.textContent = '';
        document.getElementById("category").style.border = "solid 2px green";
        return true;
    }
    
    function statusValidation() {
        const statusValue = document.getElementById("status").value.trim();
        const statusError = document.getElementById("statusError");
    
        if (statusValue === '') {
            statusError.textContent = 'Status is required';
            statusError.style.color = 'red';
            document.getElementById("status").style.border = "solid 2px red";
            return false;
        }
    
        statusError.textContent = '';
        document.getElementById("status").style.border = "solid 2px green";
        return true;
    }
    
    function countInStockValidation() {
        const countInStockValue = document.getElementById("countInStock").value.trim();
        const countInStockError = document.getElementById("countInStockError");
    
        if (countInStockValue === '') {
            countInStockError.textContent = 'Count In Stock is required';
            countInStockError.style.color = 'red';
            document.getElementById("countInStock").style.border = "solid 2px red";
            return false;
        }
    
        if (isNaN(countInStockValue)) {
            countInStockError.textContent = 'Count In Stock must be a number';
            countInStockError.style.color = 'red';
            document.getElementById("countInStock").style.border = "solid 2px red";
            return false;
        }
    
        if (countInStockValue < 0) {
            countInStockError.textContent = 'Count In Stock must be greater than or equal to 0';
            countInStockError.style.color = 'red';
            document.getElementById("countInStock").style.border = "solid 2px red";
            return false;
        }
    
        countInStockError.textContent = '';
        document.getElementById("countInStock").style.border = "solid 2px green";
        return true;
    }
    </script>
    
    

    
