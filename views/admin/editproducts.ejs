        <section class="content-main">
            <div class="container">
                <div class="edit-product-container">
                    <h1 class="text-center mb-4">Edit Product</h1>
                    <form id="editProductForm" action="/admin/products/edit/<%= product._id %>" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name:</label>
                            <input type="text" id="name" name="name" value="<%= product.name %>" class="form-control" required onkeyup="nameValidation()">
                            <small id="nameError" class="error"></small>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description:</label>
                            <textarea id="description" name="description" class="form-control" required onkeyup="descriptionValidation()"><%= product.description %></textarea>
                            <small id="descriptionError" class="error"></small>
                        </div>
                        <div class="mb-3">
                            <label for="existingImages" class="form-label">Existing Images:</label>
                            <ul class="list-unstyled">
                                <% product.images.forEach(image => { %>
                                <li>
                                    <img src="/productimages/<%= image %>" alt="<%= image %>" width="100" class="mr-2">
                                    <input type="checkbox" name="deleteImages[]" value="<%= image %>"> Delete
                                </li>
                                <% }); %>
                            </ul>
                        </div>
                        <div class="mb-3">
                            <label for="newImages" class="form-label">Add New Images:</label>
                            <input type="file" id="newImages" name="newImages[]" accept=".jpg,.jpeg,.png,.webp" multiple class="form-control" oninput="imageValidation()">
                            <small id="imageError" class="error"></small>
                        </div>
                        <div class="mb-3">
                            <label for="category" class="form-label">Category:</label>
                            <select id="category" name="category" class="form-control" required onkeyup="categoryValidation()">
                                <% categories.filter(category => category.status !== 'delete' && category.status !== 'inactive').forEach(category => { %>
                                <option value="<%= category.name %>" <% if (category.name === product.category) { %>selected<% } %>>
                                    <%= category.name %>
                                </option>
                                <% }) %>
                            </select>
                            <small id="categoryError" class="error"></small>
                        </div>
                        <div class="mb-3">
                            <label for="status" class="form-label">Status:</label>
                            <select id="status" name="status" class="form-control" required onkeyup="statusValidation()">
                                <option value="active" <% if (product.status === 'active') { %>selected<% } %>>Active</option>
                                <option value="inactive" <% if (product.status === 'inactive') { %>selected<% } %>>Inactive</option>
                                <option value="deleted" <% if (product.status === 'deleted') { %>selected<% } %>>Deleted</option>
                            </select>
                            <small id="statusError" class="error"></small>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Price:</label>
                            <input type="number" id="price" name="price" value="<%= product.price %>" min="1" step="0.01" class="form-control" required onkeyup="priceValidation()">
                            <small id="priceError" class="error"></small>
                        </div>
                        <div class="mb-3">
                            <label for="countInStock" class="form-label">Count In Stock:</label>
                            <input type="number" id="countInStock" name="countInStock" value="<%= product.countInStock %>" min="0" class="form-control" required onkeyup="countInStockValidation()">
                            <small id="countInStockError" class="error"></small>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-submit">Update Product</button>
                        </div>
                    </form>
                </div>
