                    <% }) %>
                  </ul>
                  <p class="mt-3"><strong>Bill Total:</strong> <%= order.billTotal %></p>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
