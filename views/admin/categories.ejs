    <script>

         // Function to handle category addition
    document.getElementById('saveCategoryBtn').addEventListener('click', async () => {
        const categoryName = document.getElementById('categoryName').value.trim();
        const categoryNameError = document.getElementById('categoryNameError');
        if (!categoryName) {
            document.getElementById('categoryNameError').textContent = 'Category name is required';
            categoryNameError.style.display = 'block'; // Show the error message
            return;
        }

        try {
            const response = await fetch('/admin/categories', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ name: categoryName })
            });

            if (!response.ok) {
                const errorMessage = await response.json();
                categoryNameError.textContent = errorMessage.message;
                categoryNameError.style.display = 'block'; 
            } else {
                // Category added successfully, refresh categories list or update DOM accordingly
                // Example: you can reload the page to display the updated list
                window.location.reload();
            }
        } catch (error) {
            console.error('Error:', error);
        }
    });
               function restoreCategory(categoryId) {
            // Submit the restore form when "Restore" is clicked
            document.getElementById('restoreCategoryForm_' + categoryId).submit();
        }

        function confirmDelete(categoryId) {
        // Submit the delete form when "Yes, Confirm" is clicked
        document.getElementById('deleteCategoryForm_' + categoryId).submit();
    }
        // Frontend form validation
        document.getElementById("add-category-form").addEventListener("submit", function(event) {
            var categoryName = document.getElementById("categoryName").value;
            var categoryNameError = document.getElementById("categoryNameError");

            if (categoryName.trim() === "") {
                categoryNameError.textContent = "Category name is required";
                event.preventDefault();
            } else {
                categoryNameError.textContent = "";
            }
        });


        // JavaScript code
document.addEventListener("DOMContentLoaded", function () {
    // Function to fetch removed categories and populate the modal
    function fetchRemovedCategories() {
        fetch('/admin/categories/removed')
            .then(response => response.json())
            .then(categories => {
                const removedCategoriesList = document.getElementById('removedCategoriesList');
                removedCategoriesList.innerHTML = '';
                categories.forEach(category => {
                    const li = document.createElement('li');
                    li.textContent = category.name;
                    removedCategoriesList.appendChild(li);
                });
            })
            .catch(error => console.error('Error fetching removed categories:', error));
    }

    // Event listener for the "Removed categories" button to fetch and display removed categories
    const restoreCategoryModal = document.getElementById('restoreCategoryModal');
    restoreCategoryModal.addEventListener('show.bs.modal', function () {
        fetchRemovedCategories();
    });

    // Function to handle category restoration
    function restoreCategory(categoryId) {
        fetch(`/admin/categories/${categoryId}/restore`, { method: 'POST' })
            .then(response => {
                if (response.ok) {
                    // Reload the page after restoration
                    window.location.reload();
                } else {
                    console.error('Category restoration failed');
                }
            })
            .catch(error => console.error('Error restoring category:', error));
    }
});

    
    </script>
