    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let userIdToToggle = null;
            let actionType = null;
    
            // Handle toggle modal
            $('#toggleModal').on('show.bs.modal', function(event) {
                const button = $(event.relatedTarget);
                userIdToToggle = button.data('user-id');
                actionType = button.text().trim().toLowerCase(); // Get the action type from the button text
            });
    
            // Handle confirm toggle action
            document.getElementById('confirmToggle').addEventListener('click', function() {
                if (userIdToToggle && actionType) {
                    let actionUrl = '';
                    let successMessage = '';
    
                    if (actionType === 'block') {
                        actionUrl = '/admin/block-user?id=' + userIdToToggle;
                        successMessage = 'User blocked successfully';
                    } else if (actionType === 'unblock') {
                        actionUrl = '/admin/unblock-user?id=' + userIdToToggle;
                        successMessage = 'User unblocked successfully';
                    }
    
                    if (actionUrl !== '') {
                        // Perform toggle action
                        fetch(actionUrl, {
                            method: 'POST'
                        }).then(function(response) {
                            if (response.ok) {
                                // Reload the page
                                window.location.reload();
                            } else {
                                console.error('Failed to perform toggle action');
                            }
                        }).catch(function(error) {
                            console.error('Error performing toggle action:', error);
                        });
                    }
                }
            });
        });
    </script>
    
