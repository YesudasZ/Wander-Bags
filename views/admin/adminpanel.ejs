<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Get the canvas element
            const chartCanvas = document.getElementById('salesChart');

            // Create a new Chart instance
            const salesChart = new Chart(chartCanvas, {
                type: 'bar',
                data: {
                    labels: [], // Labels for x-axis (weeks, months, or years)
                    datasets: [
                        {
                            label: 'Sales',
                            data: [], // Data for y-axis (sales count)
                            backgroundColor: 'rgba(54, 162, 235, 0.5)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1,
                        },
                    ],
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0, // Display whole numbers for y-axis
                            },
                        },
                    },
                },
            });

            // Function to fetch sales data from the server
            async function fetchSalesData(period) {
                try {
                    const response = await fetch(`/admin/salesdata?period=${period}`);
                    const data = await response.json();
                    console.log("test-2.1", data);
                    return data;
                } catch (error) {
                    console.error('Error fetching sales data:', error);
                }
            }

            // Function to update the chart with new data
            function updateChart(labels, data) {
                salesChart.data.labels = labels;
                salesChart.data.datasets[0].data = data;
                salesChart.update();
            }

            // Event listeners for filter buttons
            const weeklyFilter = document.getElementById('weekly-filter');
            const monthlyFilter = document.getElementById('monthly-filter');
            const yearlyFilter = document.getElementById('yearly-filter');

            weeklyFilter.addEventListener('click', async () => {
                const salesData = await fetchSalesData('weekly');
                updateChart(salesData.labels, salesData.data);
                weeklyFilter.classList.add('active');
                monthlyFilter.classList.remove('active');
                yearlyFilter.classList.remove('active');
            });

            monthlyFilter.addEventListener('click', async () => {
                const salesData = await fetchSalesData('monthly');
                updateChart(salesData.labels, salesData.data);
                weeklyFilter.classList.remove('active');
                monthlyFilter.classList.add('active');
                yearlyFilter.classList.remove('active');
            });

            yearlyFilter.addEventListener('click', async () => {
                const salesData = await fetchSalesData('yearly');
                updateChart(salesData.labels, salesData.data);
                weeklyFilter.classList.remove('active');
                monthlyFilter.classList.remove('active');
                yearlyFilter.classList.add('active');
            });

            // Initial load with weekly data
            weeklyFilter.click();
        });




        document.addEventListener('DOMContentLoaded', function (){
    const topProductsBtn = document.getElementById('topProductsBtn');
    const topCategoriesBtn = document.getElementById('topCategoriesBtn');
    const productList = document.getElementById('productList');
    const categoryList = document.getElementById('categoryList');

    topProductsBtn.addEventListener('click', function (){
        productList.style.display = 'block';
        categoryList.style.display = 'none';
        topProductsBtn.classList.add('active');
        topCategoriesBtn.classList.remove('active');
    });

    topCategoriesBtn.addEventListener('click', function (){
        productList.style.display = 'none';
        categoryList.style.display = 'block';
        topProductsBtn.classList.remove('active');
        topCategoriesBtn.classList.add('active');
    })
})






    </script>
