<script>
    function validateForm() {
    const otpValue = document.getElementById("otp").value.trim();
    const otpError = document.getElementById("otpError");
    const otpRegex = /^\d{6}$/;

    if (otpValue === '') {
        otpError.textContent = 'OTP is required';
        otpError.style.color = 'red';
        document.getElementById("otp").style.border = "solid 2px red";
        return false;
    }

    if (!otpRegex.test(otpValue)) {
        otpError.textContent = 'OTP should contain exactly 6 digits';
        otpError.style.color = 'red';
        document.getElementById("otp").style.border = "solid 2px red";
        return false;
    }

    otpError.textContent = '';
    document.getElementById("otp").style.border = "solid 2px green";
    return true;
}

document.getElementById("otpVerificationForm").addEventListener("submit", async function (event) {
    event.preventDefault(); // Prevent form submission

    if (validateForm()) {
        // Form validation passed, proceed with form submission
        this.submit();
    }
});

</script>

</body>

