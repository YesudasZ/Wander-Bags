    <main class="main">
        <section class="pt-150 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 m-auto">
                        <div class="row justify-content-center">
                            <div class="col-lg-6">
                                <div class="login_wrap widget-taber-content p-30 background-white border-radius-5">
                                    <div class="padding_eight_all bg-white">
                                        <div class="heading_s1">
                                            <h3 class="mb-30">OTP Verification</h3>
                                        </div>
                                        <% if(typeof message !== 'undefined'){ %>
                                            <h4 style="color: red;"><%=message %></h4>
                                        <% } %>
                                        <form id="otpVerificationForm" method="post" onsubmit="return validateForm()">
                                            <div class="form-group">
                                                <input type="number" required="" name="otp" id="otp" class="form-control" placeholder="Enter OTP">
                                                <small id="otpError" class="error"></small>
                                            </div>
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-md-6">
