  <main>
    <div class="container mt-5">
      <h1 class="text-center mb-4">Checkout</h1>
      <div class="row">
        <div class="col-md-4">
          <div class="address-section">
            <h3>Delivery Address</h3>
            <div class="existing-address">
              <h4>Existing Addresses</h4>
              <div class="address-list">
                <!-- Display existing addresses dynamically -->
                <% user.address.forEach(address => { %>
                  <div class="address-card mb-3">
                    <div class="card">
                      <div class="card-body">
                        <div class="form-check">
                          <input type="radio" name="address" id="<%= address._id %>" value="<%= address._id %>" class="form-check-input">
                          <label for="<%= address._id %>" class="form-check-label">
                            <%= address.houseName %> <br> <%= address.street %><br>  <%= address.city %><br>  <%= address.state %><br>  <%= address.country %><br> <%= address.postalCode %>
                          </label>
                        </div>
                        <span class="edit-icon"><i class="bi bi-pencil"></i></span>
                      </div>
                    </div>
                  </div>
                <% }); %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="cart-section">
            <h3>Cart Items</h3>
            <div class="cart-items">
              <!-- Cart items -->
              <% cart.items.forEach(item => { %>
                <div class="cart-item mb-3">
                  <div class="row g-0">
                    <div class="col-md-3">
                      <img src="/productImages/<%= item.image[0] %>" alt="Product Image" class="img-fluid">
                    </div>
                    <div class="col-md-9">
                      <div class="card-body">
                        <h5 class="card-title"><%= item.title %></h5>
                        <p class="card-text">Discounted Price: $<%= item.productPrice %></p>
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="cart-item-actions">
                            <button class="btn btn-sm btn-outline-secondary" onclick="decrementQuantity(this, '<%= item._id %>')">-</button>
                            <span class="mx-2 item-quantity"><%= item.quantity %></span>
                            <button class="btn btn-sm btn-outline-secondary" onclick="incrementQuantity(this, '<%= item._id %>')">+</button>
                          </div>
                          <div class="cart-item-total">
                            <strong>Total: $<span class="item-total"><%= item.price %></span></strong>
                          </div>
                          <div class="cart-item-select">
                            <div class="form-check">
                              <input type="checkbox" id="<%= item._id %>" name="selectedItems" value="<%= item._id %>" class="form-check-input item-checkbox" onchange="updateTotal(this, '<%= item.price %>')">
                              <label for="<%= item._id %>" class="form-check-label">Select</label>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
            <div class="payment-options">
              <h4>Payment Options</h4>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentOption" id="cashOnDelivery" checked>
                <label class="form-check-label" for="cashOnDelivery">
                  Cash on Delivery
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentOption" id="creditCard">
                <label class="form-check-label" for="creditCard">
                  Credit Card
                </label>
              </div>
            </div>
            <div class="cart-total">
              <h5>Total: $<span id="totalAmount"><%= cart.billTotal %></span></h5>
            </div>
            <button class="btn btn-success place-order-btn">Place Order</button>
