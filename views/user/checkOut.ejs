       <script>

        let cartTotal = parseFloat("<%= cart.billTotal %>");
        
    function decrementQuantity(button, itemId) {
      const quantitySpan = button.parentNode.querySelector('.item-quantity');
      const totalSpan = button.parentNode.parentNode.querySelector('.item-total');
      const checkboxInput = button.parentNode.parentNode.querySelector('.item-checkbox');

      let quantity = parseInt(quantitySpan.textContent);
      if (quantity > 1) {
        quantity--;
        quantitySpan.textContent = quantity;

        // Update the item total
        const price = parseFloat(checkboxInput.nextElementSibling.textContent.replace('$', ''));
        const itemTotal = price * quantity;
        totalSpan.textContent = itemTotal.toFixed(2);

        // Update the overall total if the item is selected
        if (checkboxInput.checked) {
          totalAmount -= price;
          updateTotalAmount();
        }
      }
    }

    function incrementQuantity(button, itemId) {
      const quantitySpan = button.parentNode.querySelector('.item-quantity');
      const totalSpan = button.parentNode.parentNode.querySelector('.item-total');
      const checkboxInput = button.parentNode.parentNode.querySelector('.item-checkbox');

      let quantity = parseInt(quantitySpan.textContent);
      quantity++;
      quantitySpan.textContent = quantity;

      // Update the item total
      const price = parseFloat(checkboxInput.nextElementSibling.textContent.replace('$', ''));
      const itemTotal = price * quantity;
      totalSpan.textContent = itemTotal.toFixed(2);

      // Update the overall total if the item is selected
      if (checkboxInput.checked) {
        totalAmount += price;
        updateTotalAmount();
      }
    }

    function updateTotal(checkbox, itemPrice) {
      const isChecked = checkbox.checked;
      const price = parseFloat(itemPrice);

      if (isChecked) {
        totalAmount += price;
      } else {
        totalAmount -= price;
      }

      updateTotalAmount();
    }

    function updateTotalAmount() {
      document.getElementById('totalAmount').textContent = totalAmount.toFixed(2);
    }

    // Add event listeners for address radio buttons
    const addressRadios = document.querySelectorAll('.address-radio');
    addressRadios.forEach(radio => {
      radio.addEventListener('change', () => {
        const selectedAddress = radio.parentNode;
        addressRadios.forEach(r => r.parentNode.classList.remove('selected'));
        selectedAddress.classList.add('selected');
      });
    });
  </script>

